    Layout = "~/Views/Shared/_Admin.cshtml";
}

<div class="container mt-5 mb-5">
    <table class="table table-bordered table-striped mt-5 mb-5" id="tbEmp">
        <thead class="thead-dark">
            <tr>
                <th scope="col">No</th>
                <th scope="col">NIK</th>
                <th scope="col">Nama</th>
                <th scope="col">Kelamin</th>
                <th scope="col">Email</th>
                <th scope="col">No Telepon</th>
                <th scope="col">Gaji</th>
                <th scope="col">Actions</th>
            </tr>
        </thead>
        <tbody id="contEmp">
        </tbody>
    </table>
</div>

<div class="modal bd-example-modal-lg" id="ModalEmp" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Details</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body" id="DetailEmp">
                ...
            </div>
        </div>
    </div>
</div>

<div class="modal bd-example-modal-lg" id="ModalAddNew" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Add New Data Form</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body" id="DetailEmp">
                @*<form class="needs-validation" novalidate>*@
                <form id="addDataForm" class="needs-validation" novalidate>
                    <div class="row">
                        <div class="form-group col">
                            <label for="InputFN">Nama Depan</label>
                            <input type="text" class="form-control" id="InputFN" aria-describedby="inputFN" placeholder="cth: Budi" required>
                        </div>
                        <div class="form-group col">
                            <label for="InputLN">Nama Belakang</label>
                            <input type="text" class="form-control" id="InputLN" aria-describedby="inputLN" placeholder="cth: Setiawan" required>
                        </div>
                        <div class="form-group col">
                            <label for="InputGd">Jenis Kelamin</label>
                            <select class="custom-select mr-sm-2" id="InputGd" required>
                                <option selected value="">Pilih ...</option>
                                <option value="0">Laki-laki</option>
                                <option value="1">Perempuan</option>
                            </select>
                        </div>
                    </div>
                    <div class="row">
                        <div class="form-group col mb-0">
                            <label for="InputBd">Tanggal Lahir</label>
                            <div class="form-group">
                                <div class="datepicker date input-group">
                                    <input type="text" placeholder="cth: 2012-12-21" class="form-control" id="InputBd" required>
                                    <span class="input-group-append"></span>
                                </div>
                            </div>
                        </div>
                        <div class="form-group col">
                            <label for="InputPh">Nomor Telepon</label>
                            <input type="text" class="form-control" id="InputPh" aria-describedby="inputPh" placeholder="cth: 0812xxxxxxx" required>
                        </div>
                    </div>
                    <div class="row">
                        <div class="form-group col">
                            <label for="InputGp">IPK</label>
                            <input type="text" class="form-control" id="InputGp" aria-describedby="inputGp" placeholder="cth: 4.00" required>
                        </div>
                        <div class="form-group col">
                            <label for="InputDg">Jenjang</label>
                            <input type="text" class="form-control" id="InputDg" aria-describedby="inputDg" placeholder="cth: S3" required>
                        </div>
                        <div class="form-group col">
                            <label for="InputUn">Universitas</label>
                            <select class="custom-select mr-sm-2" id="InputUn" required>
                            </select>
                        </div>
                    </div>
                    <div class="row">
                        <div class="form-group col">
                            <label for="InputEm">Email</label>
                            <input type="text" class="form-control" id="InputEm" aria-describedby="inputEm" placeholder="cth: contoh@binama.com" required>
                        </div>
                        <div class="form-group col">
                            <label for="InputPw">Kata Sandi</label>
                            <input type="password" class="form-control" id="InputPw" aria-describedby="inputPw" placeholder="cth: Ser1buU$D" required>
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="InputSl">Gaji</label>
                        <div class="input-group-prepend">
                            <span class="input-group-text">$</span>
                            <input type="text" class="form-control" id="InputSl" aria-describedby="inputSl" placeholder="cth: 1000" required>
                        </div>
                    </div>
                    <br />
                    <button type="submit" id="dataSubmit" class="btn btn-primary rounded float-right" style="width: 150px">Submit</button>
                </form>
            </div>
        </div>
    </div>
</div>

<div id="empEdit">

</div>

